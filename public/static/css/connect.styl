body
    align-items: center
    background-color #f6f6f6
    display: flex
    margin 0px
    font-size: 14px
    justify-content: center
    min-height: 100vh
    background-image: url('/static/imagenes/6.jpg')

.mtop16
    margin-top 10px



.box
    background-color #fff
    border-radius  8px
    border 1px solid #d6d6d6
    position relative
    
    width:  500px
    .btn-success
        width: 100%

    .form-control
        &:focus
        &:active
            outline none
            box-shadow none
    .inside
        padding 16px
    
    .header
        border-radius: 8px 8px 0px 0px
        a
            img
                max-width 100%
                border-radius: 8px 8px 0px 0px

    .footer
        text-align: center
        a
            display: inline-block
            &:last-child
                margin-left: 40px 
            
